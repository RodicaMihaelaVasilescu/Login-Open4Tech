<UserControl x:Class="Open4Tech.View.ResetPasswordControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Open4Tech.View"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <StackPanel.Background>
            <ImageBrush ImageSource="../Resources/Login.png" Stretch="UniformToFill" />
        </StackPanel.Background>
        <TextBlock 
              HorizontalAlignment="Center" 
              VerticalAlignment="Top" 
              Height="30" Width="250"
              TextAlignment="Center"
              FontSize="20" 
              Foreground="White"
              TextWrapping="Wrap" 
              Margin="0 120 0 0"
              Text="Reset Password" />

        <TextBlock 
              HorizontalAlignment="Center" 
              VerticalAlignment="Center" 
              TextAlignment="Center"
              FontSize="15" 
              Foreground="White"
              TextWrapping="Wrap" 
              Text="You can reset your password here:" />

        <PasswordBox Name ="NewPassword"
                Grid.Row="4"  
                 FontSize="18" 
                 Margin="0 20 0 0" 
                 VerticalAlignment="Center"
                 HorizontalAlignment="Center"
                 Width="430"
                 Height="40" 
                 BorderBrush="White"
                 Foreground="White">

            <materialDesign:HintAssist.Hint>
                <TextBlock Foreground="White">New Password</TextBlock>
            </materialDesign:HintAssist.Hint>

        </PasswordBox>
        <PasswordBox Name ="ConfirmPassword"
                Grid.Row="4"  
                 FontSize="18" 
                 Margin="0 20 0 0" 
                 VerticalAlignment="Center"
                 HorizontalAlignment="Center"
                 Width="430"
                 Height="40" 
                 BorderBrush="White"
                 Foreground="White" >

            <materialDesign:HintAssist.Hint>
                <TextBlock Foreground="White">Confirm Password</TextBlock>
            </materialDesign:HintAssist.Hint>

        </PasswordBox>

        <Button x:Name="Reset" 
            Content="RESET" 
            FontSize="18" 
            Margin="0 40 0 0" 
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Width="170"
            Height="40"
            Click="Reset_Click"
            Command="{Binding ResetCommand}"/>

    </StackPanel>
</UserControl>